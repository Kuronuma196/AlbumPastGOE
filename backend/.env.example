# Configurações do Servidor
PORT=5000
NODE_ENV=development

# URL do Frontend (para CORS)
FRONTEND_URL=http://localhost:3000

# Configurações do MongoDB
MONGODB_URI=mongodb://localhost:27017/albumpastgoe
MONGODB_URI_PROD=mongodb+srv://usuario:senha@cluster.mongodb.net/albumpastgoe?retryWrites=true&w=majority

# Autenticação JWT
JWT_SECRET=seu_segredo_jwt_aqui_mude_em_producao
JWT_EXPIRES_IN=7d

# Configurações de Upload
MAX_FILE_SIZE=10485760 # 10MB em bytes
UPLOAD_PATH=./uploads

# Configurações de Segurança
RATE_LIMIT_WINDOW_MS=900000 # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Log
LOG_LEVEL=info

# Para produção, descomente as linhas abaixo:
# NODE_ENV=production
# MONGODB_URI=${MONGODB_URI_PROD}
# JWT_SECRET=seu_segredo_super_forte_aqui