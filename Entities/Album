import React, { useState } from 'react';
import { base44 } from '@/api/base44Client';
import { useQuery } from '@tanstack/react-query';
import { motion, AnimatePresence } from 'framer-motion';
import { Skeleton } from "@/components/ui/skeleton";
import { Tabs, TabsList, TabsTrigger } from "@/components/ui/tabs";
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from "@/components/ui/select";
import { Input } from "@/components/ui/input";
import { 
    Images, Grid3X3, List, Search, SortAsc, SortDesc, 
    ImageOff, Lock, Calendar, HardDrive, Palette
} from 'lucide-react';
import { format } from 'date-fns';
import { ptBR } from 'date-fns/locale';

import PhotoViewer from '../components/photos/PhotoViewer';

export default function PublicAlbum() {
    const urlParams = new URLSearchParams(window.location.search);
    const token = urlParams.get('token');

    const [viewMode, setViewMode] = useState('grid');
    const [viewingPhoto, setViewingPhoto] = useState(null);
    const [searchQuery, setSearchQuery] = useState('');
    const [sortOrder, setSortOrder] = useState('desc');

    const { data: album, isLoading: albumLoading, error: albumError } = useQuery({
        queryKey: ['public-album', token],
        queryFn: async () => {
            const albums = await base44.entities.Album.filter({ public_token: token, is_public: true });
            if (albums.length === 0) throw new Error('Album not found');
            return albums[0];
        },
        enabled: !!token,
        retry: false
    });

    const { data: photos = [], isLoading: photosLoading } = useQuery({
        queryKey: ['public-photos', album?.id],
        queryFn: () => base44.entities.Photo.filter({ album_id: album.id }),
        enabled: !!album?.id
    });

    const formatSize = (bytes) => {
        if (!bytes) return '0 B';
        if (bytes < 1024) return `${bytes} B`;
        if (bytes < 1024 * 1024) return `${(bytes / 1024).toFixed(1)} KB`;
        return `${(bytes / (1024 * 1024)).toFixed(1)} MB`;
    };

    const filteredPhotos = photos
        .filter(photo =>
            photo.title?.toLowerCase().includes(searchQuery.toLowerCase()) ||
            photo.description?.toLowerCase().includes(searchQuery.toLowerCase())
        )
        .sort((a, b) => {
            const dateA = new Date(a.acquisition_date || a.created_date);
            const dateB = new Date(b.acquisition_date || b.created_date);
            return sortOrder === 'desc' ? dateB - dateA : dateA - dateB;
        });

    if (!token) {
        return (
            <div className="min-h-screen flex items-center justify-center bg-slate-50">
                <div className="text-center">
                    <Lock className="w-16 h-16 mx-auto mb-4 text-slate-300" />
                    <h2 className="text-xl font-semibold text-slate-700">Link inválido</h2>
                    <p className="text-slate-500 mt-2">O token de acesso não foi fornecido.</p>
                </div>
            </div>
        );
    }

    if (albumError) {
        return (
            <div className="min-h-screen flex items-center justify-center bg-slate-50">
                <div className="text-center">
                    <Lock className="w-16 h-16 mx-auto mb-4 text-slate-300" />
                    <h2 className="text-xl font-semibold text-slate-700">Álbum não encontrado</h2>
                    <p className="text-slate-500 mt-2">Este álbum não existe ou não é público.</p>
                </div>
            </div>
        );
    }

    return (
        <div className="min-h-screen bg-gradient-to-br from-slate-50 via-white to-violet-50">
            {/* Header */}
            <div className="bg-white/80 backdrop-blur-md border-b border-slate-100">
                <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
                    {albumLoading ? (
                        <div className="space-y-3">
                            <Skeleton className="h-8 w-64" />
                            <Skeleton className="h-4 w-96" />
                        </div>
                    ) : album && (
                        <div className="flex items-center gap-4">
                            <div className="w-14 h-14 rounded-xl bg-gradient-to-br from-violet-500 to-purple-600 flex items-center justify-center shadow-lg shadow-violet-500/20">
                                <Images className="w-7 h-7 text-white" />
                            </div>
                            <div>
                                <h1 className="text-2xl font-bold text-slate-800">{album.title}</h1>
                                {album.description && (
                                    <p className="text-slate-500 mt-1">{album.description}</p>
                                )}
                            </div>
                        </div>
                    )}
                </div>
            </div>

            {/* Controls */}
            <div className="bg-white/50 border-b border-slate-100">
                <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
                    <div className="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3">
                        <div className="flex items-center gap-3 w-full sm:w-auto">
                            <div className="relative flex-1 sm:w-64">
                                <Search className="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-400" />
                                <Input
                                    placeholder="Buscar fotos..."
                                    value={searchQuery}
                                    onChange={(e) => setSearchQuery(e.target.value)}
                                    className="pl-9 bg-white"
                                />
                            </div>

                            <Select value={sortOrder} onValueChange={setSortOrder}>
                                <SelectTrigger className="w-40">
                                    <SelectValue />
                                </SelectTrigger>
                                <SelectContent>
                                    <SelectItem value="desc">
                                        <span className="flex items-center gap-2">
                                            <SortDesc className="w-4 h-4" />
                                            Mais recentes
                                        </span>
                                    </SelectItem>
                                    <SelectItem value="asc">
                                        <span className="flex items-center gap-2">
                                            <SortAsc className="w-4 h-4" />
                                            Mais antigas
                                        </span>
                                    </SelectItem>
                                </SelectContent>
                            </Select>
                        </div>

                        <div className="flex items-center gap-2">
                            <span className="text-sm text-slate-500">
                                {filteredPhotos.length} foto(s)
                            </span>
                            <Tabs value={viewMode} onValueChange={setViewMode}>
                                <TabsList className="bg-slate-100">
                                    <TabsTrigger value="grid" className="gap-1">
                                        <Grid3X3 className="w-4 h-4" />
                                    </TabsTrigger>
                                    <TabsTrigger value="table" className="gap-1">
                                        <List className="w-4 h-4" />
                                    </TabsTrigger>
                                </TabsList>
                            </Tabs>
                        </div>
                    </div>
                </div>
            </div>

            {/* Content */}
            <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
                {photosLoading ? (
                    <div className="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
                        {[...Array(10)].map((_, i) => (
                            <Skeleton key={i} className="aspect-square rounded-xl" />
                        ))}
                    </div>
                ) : filteredPhotos.length === 0 ? (
                    <motion.div
                        initial={{ opacity: 0, y: 20 }}
                        animate={{ opacity: 1, y: 0 }}
                        className="text-center py-20"
                    >
                        <div className="w-24 h-24 mx-auto mb-6 rounded-full bg-slate-100 flex items-center justify-center">
                            <ImageOff className="w-12 h-12 text-slate-300" />
                        </div>
                        <h2 className="text-xl font-semibold text-slate-700 mb-2">
                            {searchQuery ? 'Nenhuma foto encontrada' : 'Álbum vazio'}
                        </h2>
                        <p className="text-slate-500">
                            {searchQuery 
                                ? 'Tente buscar com outros termos'
                                : 'Este álbum ainda não possui fotos'
                            }
                        </p>
                    </motion.div>
                ) : viewMode === 'grid' ? (
                    <div className="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
                        <AnimatePresence>
                            {filteredPhotos.map((photo) => (
                                <motion.div
                                    key={photo.id}
                                    initial={{ opacity: 0, scale: 0.95 }}
                                    animate={{ opacity: 1, scale: 1 }}
                                    whileHover={{ scale: 1.02 }}
                                    className="group relative aspect-square rounded-xl overflow-hidden bg-slate-100 cursor-pointer shadow-sm hover:shadow-lg transition-all"
                                    onClick={() => setViewingPhoto(photo)}
                                >
                                    <img 
                                        src={photo.thumbnail_url || photo.file_url} 
                                        alt={photo.title}
                                        className="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                                    />
                                    {photo.dominant_color && (
                                        <div 
                                            className="absolute bottom-2 left-2 w-5 h-5 rounded-full border-2 border-white shadow-md"
                                            style={{ backgroundColor: photo.dominant_color }}
                                        />
                                    )}
                                    <div className="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity">
                                        <div className="absolute bottom-0 left-0 right-0 p-3">
                                            <p className="text-white font-medium text-sm truncate">
                                                {photo.title || 'Sem título'}
                                            </p>
                                        </div>
                                    </div>
                                </motion.div>
                            ))}
                        </AnimatePresence>
                    </div>
                ) : (
                    <div className="bg-white rounded-xl shadow-sm border border-slate-100 overflow-hidden">
                        <table className="w-full">
                            <thead>
                                <tr className="bg-slate-50 text-left">
                                    <th className="px-4 py-3 font-medium text-slate-600 w-20">Foto</th>
                                    <th className="px-4 py-3 font-medium text-slate-600">Título</th>
                                    <th className="px-4 py-3 font-medium text-slate-600">Data</th>
                                    <th className="px-4 py-3 font-medium text-slate-600">Tamanho</th>
                                    <th className="px-4 py-3 font-medium text-slate-600 w-24">Cor</th>
                                </tr>
                            </thead>
                            <tbody>
                                {filteredPhotos.map((photo) => (
                                    <tr 
                                        key={photo.id}
                                        className="border-t border-slate-100 hover:bg-slate-50 cursor-pointer"
                                        onClick={() => setViewingPhoto(photo)}
                                    >
                                        <td className="px-4 py-3">
                                            <div className="w-12 h-12 rounded-lg overflow-hidden bg-slate-100">
                                                <img 
                                                    src={photo.thumbnail_url || photo.file_url}
                                                    alt={photo.title}
                                                    className="w-full h-full object-cover"
                                                />
                                            </div>
                                        </td>
                                        <td className="px-4 py-3 font-medium text-slate-800">
                                            {photo.title || 'Sem título'}
                                        </td>
                                        <td className="px-4 py-3 text-slate-600">
                                            {photo.acquisition_date 
                                                ? format(new Date(photo.acquisition_date), "dd/MM/yyyy", { locale: ptBR })
                                                : '-'
                                            }
                                        </td>
                                        <td className="px-4 py-3 text-slate-600">
                                            {formatSize(photo.file_size)}
                                        </td>
                                        <td className="px-4 py-3">
                                            <div className="flex items-center gap-2">
                                                <div 
                                                    className="w-6 h-6 rounded-full border border-slate-200"
                                                    style={{ backgroundColor: photo.dominant_color || '#ccc' }}
                                                />
                                                <span className="text-xs text-slate-500 font-mono">
                                                    {photo.dominant_color || '-'}
                                                </span>
                                            </div>
                                        </td>
                                    </tr>
                                ))}
                            </tbody>
                        </table>
                    </div>
                )}
            </div>

            {/* Photo Viewer */}
            <PhotoViewer
                open={!!viewingPhoto}
                onOpenChange={(open) => !open && setViewingPhoto(null)}
                photo={viewingPhoto}
                photos={filteredPhotos}
                onNavigate={(p) => setViewingPhoto(p)}
            />
        </div>
    );
}