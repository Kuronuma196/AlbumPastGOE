import React, { useState } from 'react';
import { base44 } from '@/api/base44Client';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { motion, AnimatePresence } from 'framer-motion';
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Skeleton } from "@/components/ui/skeleton";
import { Plus, Search, Images, FolderOpen } from 'lucide-react';
import { toast } from 'sonner';

import AlbumCard from '../components/albums/AlbumCard';
import AlbumFormModal from '../components/albums/AlbumFormModal';
import ShareModal from '../components/albums/ShareModal';

export default function Albums() {
    const [showForm, setShowForm] = useState(false);
    const [editingAlbum, setEditingAlbum] = useState(null);
    const [shareAlbum, setShareAlbum] = useState(null);
    const [searchQuery, setSearchQuery] = useState('');

    const queryClient = useQueryClient();

    const { data: albums = [], isLoading } = useQuery({
        queryKey: ['albums'],
        queryFn: () => base44.entities.Album.list('-created_date')
    });

    const createMutation = useMutation({
        mutationFn: (data) => base44.entities.Album.create(data),
        onSuccess: () => {
            queryClient.invalidateQueries({ queryKey: ['albums'] });
            toast.success('Álbum criado com sucesso!');
        }
    });

    const updateMutation = useMutation({
        mutationFn: ({ id, data }) => base44.entities.Album.update(id, data),
        onSuccess: () => {
            queryClient.invalidateQueries({ queryKey: ['albums'] });
            toast.success('Álbum atualizado!');
        }
    });

    const deleteMutation = useMutation({
        mutationFn: (id) => base44.entities.Album.delete(id),
        onSuccess: () => {
            queryClient.invalidateQueries({ queryKey: ['albums'] });
            toast.success('Álbum excluído!');
        }
    });

    const handleSave = async (formData) => {
        if (editingAlbum) {
            await updateMutation.mutateAsync({ id: editingAlbum.id, data: formData });
        } else {
            await createMutation.mutateAsync(formData);
        }
        setEditingAlbum(null);
    };

    const handleEdit = (album) => {
        setEditingAlbum(album);
        setShowForm(true);
    };

    const handleDelete = async (album) => {
        if (album.photo_count > 0) {
            toast.error('Não é possível excluir um álbum que contém fotos');
            return;
        }
        if (window.confirm(`Deseja realmente excluir o álbum "${album.title}"?`)) {
            await deleteMutation.mutateAsync(album.id);
        }
    };

    const handleTogglePublic = async (album, isPublic) => {
        const data = {
            is_public: isPublic,
            public_token: isPublic && !album.public_token 
                ? Math.random().toString(36).substring(2, 15) + Math.random().toString(36).substring(2, 15)
                : album.public_token
        };
        await updateMutation.mutateAsync({ id: album.id, data });
        setShareAlbum({ ...album, ...data });
    };

    const filteredAlbums = albums.filter(album =>
        album.title?.toLowerCase().includes(searchQuery.toLowerCase()) ||
        album.description?.toLowerCase().includes(searchQuery.toLowerCase())
    );

    return (
        <div className="min-h-screen bg-gradient-to-br from-slate-50 via-white to-violet-50">
            {/* Header */}
            <div className="bg-white/80 backdrop-blur-md border-b border-slate-100 sticky top-0 z-40">
                <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
                    <div className="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                        <div className="flex items-center gap-3">
                            <div className="w-12 h-12 rounded-xl bg-gradient-to-br from-violet-500 to-purple-600 flex items-center justify-center shadow-lg shadow-violet-500/20">
                                <Images className="w-6 h-6 text-white" />
                            </div>
                            <div>
                                <h1 className="text-2xl font-bold text-slate-800">Meus Álbuns</h1>
                                <p className="text-sm text-slate-500">
                                    {albums.length} {albums.length === 1 ? 'álbum' : 'álbuns'}
                                </p>
                            </div>
                        </div>
                        
                        <div className="flex items-center gap-3">
                            <div className="relative flex-1 sm:w-64">
                                <Search className="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-400" />
                                <Input
                                    placeholder="Buscar álbuns..."
                                    value={searchQuery}
                                    onChange={(e) => setSearchQuery(e.target.value)}
                                    className="pl-9 bg-white/80"
                                />
                            </div>
                            <Button 
                                onClick={() => {
                                    setEditingAlbum(null);
                                    setShowForm(true);
                                }}
                                className="bg-violet-600 hover:bg-violet-700 shadow-lg shadow-violet-500/20"
                            >
                                <Plus className="w-4 h-4 mr-2" />
                                Novo Álbum
                            </Button>
                        </div>
                    </div>
                </div>
            </div>

            {/* Content */}
            <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
                {isLoading ? (
                    <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                        {[...Array(8)].map((_, i) => (
                            <div key={i} className="space-y-3">
                                <Skeleton className="aspect-[4/3] rounded-xl" />
                                <Skeleton className="h-4 w-3/4" />
                                <Skeleton className="h-3 w-1/2" />
                            </div>
                        ))}
                    </div>
                ) : filteredAlbums.length === 0 ? (
                    <motion.div
                        initial={{ opacity: 0, y: 20 }}
                        animate={{ opacity: 1, y: 0 }}
                        className="text-center py-20"
                    >
                        <div className="w-24 h-24 mx-auto mb-6 rounded-full bg-slate-100 flex items-center justify-center">
                            <FolderOpen className="w-12 h-12 text-slate-300" />
                        </div>
                        <h2 className="text-xl font-semibold text-slate-700 mb-2">
                            {searchQuery ? 'Nenhum álbum encontrado' : 'Nenhum álbum ainda'}
                        </h2>
                        <p className="text-slate-500 mb-6">
                            {searchQuery 
                                ? 'Tente buscar com outros termos'
                                : 'Crie seu primeiro álbum para começar a organizar suas fotos'
                            }
                        </p>
                        {!searchQuery && (
                            <Button 
                                onClick={() => setShowForm(true)}
                                className="bg-violet-600 hover:bg-violet-700"
                            >
                                <Plus className="w-4 h-4 mr-2" />
                                Criar Primeiro Álbum
                            </Button>
                        )}
                    </motion.div>
                ) : (
                    <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                        <AnimatePresence>
                            {filteredAlbums.map((album) => (
                                <AlbumCard
                                    key={album.id}
                                    album={album}
                                    onEdit={handleEdit}
                                    onDelete={handleDelete}
                                    onShare={(a) => setShareAlbum(a)}
                                />
                            ))}
                        </AnimatePresence>
                    </div>
                )}
            </div>

            {/* Modals */}
            <AlbumFormModal
                open={showForm}
                onOpenChange={setShowForm}
                album={editingAlbum}
                onSave={handleSave}
            />

            <ShareModal
                open={!!shareAlbum}
                onOpenChange={(open) => !open && setShareAlbum(null)}
                album={shareAlbum}
                onTogglePublic={handleTogglePublic}
            />
        </div>
    );
}