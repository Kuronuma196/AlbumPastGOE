import React, { useState, useEffect } from 'react';
import { base44 } from '@/api/base44Client';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { motion, AnimatePresence } from 'framer-motion';
import { Link } from 'react-router-dom';
import { createPageUrl } from '@/utils';
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Skeleton } from "@/components/ui/skeleton";
import { Tabs, TabsList, TabsTrigger } from "@/components/ui/tabs";
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from "@/components/ui/select";
import { 
    ArrowLeft, Upload, Search, Grid3X3, List, Edit, 
    SortAsc, SortDesc, ImageOff, X, Loader2
} from 'lucide-react';
import { toast } from 'sonner';

import AlbumFormModal from '../components/albums/AlbumFormModal';
import PhotoUploader from '../components/photos/PhotoUploader';
import PhotoCard from '../components/photos/PhotoCard';
import PhotoTableView from '../components/photos/PhotoTableView';
import PhotoFormModal from '../components/photos/PhotoFormModal';
import PhotoViewer from '../components/photos/PhotoViewer';

import {
    AlertDialog,
    AlertDialogAction,
    AlertDialogCancel,
    AlertDialogContent,
    AlertDialogDescription,
    AlertDialogFooter,
    AlertDialogHeader,
    AlertDialogTitle,
} from "@/components/ui/alert-dialog";

export default function AlbumView() {
    const urlParams = new URLSearchParams(window.location.search);
    const albumId = urlParams.get('id');

    const [viewMode, setViewMode] = useState('grid');
    const [showUploader, setShowUploader] = useState(false);
    const [editAlbum, setEditAlbum] = useState(false);
    const [editingPhoto, setEditingPhoto] = useState(null);
    const [viewingPhoto, setViewingPhoto] = useState(null);
    const [deletePhoto, setDeletePhoto] = useState(null);
    const [searchQuery, setSearchQuery] = useState('');
    const [sortOrder, setSortOrder] = useState('desc');
    const [isDeleting, setIsDeleting] = useState(false);

    const queryClient = useQueryClient();

    const { data: album, isLoading: albumLoading } = useQuery({
        queryKey: ['album', albumId],
        queryFn: () => base44.entities.Album.filter({ id: albumId }).then(res => res[0]),
        enabled: !!albumId
    });

    const { data: photos = [], isLoading: photosLoading } = useQuery({
        queryKey: ['photos', albumId],
        queryFn: () => base44.entities.Photo.filter({ album_id: albumId }),
        enabled: !!albumId
    });

    const updateAlbumMutation = useMutation({
        mutationFn: (data) => base44.entities.Album.update(albumId, data),
        onSuccess: () => {
            queryClient.invalidateQueries({ queryKey: ['album', albumId] });
            queryClient.invalidateQueries({ queryKey: ['albums'] });
            toast.success('Álbum atualizado!');
        }
    });

    const updatePhotoMutation = useMutation({
        mutationFn: ({ id, data }) => base44.entities.Photo.update(id, data),
        onSuccess: () => {
            queryClient.invalidateQueries({ queryKey: ['photos', albumId] });
            toast.success('Foto atualizada!');
        }
    });

    const deletePhotoMutation = useMutation({
        mutationFn: (id) => base44.entities.Photo.delete(id),
        onSuccess: () => {
            queryClient.invalidateQueries({ queryKey: ['photos', albumId] });
            updateAlbumPhotoCount();
            toast.success('Foto excluída!');
        }
    });

    const updateAlbumPhotoCount = async () => {
        const currentPhotos = await base44.entities.Photo.filter({ album_id: albumId });
        const coverUrl = currentPhotos.length > 0 ? currentPhotos[0].thumbnail_url || currentPhotos[0].file_url : null;
        await updateAlbumMutation.mutateAsync({ 
            photo_count: currentPhotos.length,
            cover_url: coverUrl
        });
    };

    const handleUploadComplete = async () => {
        await queryClient.invalidateQueries({ queryKey: ['photos', albumId] });
        const currentPhotos = await base44.entities.Photo.filter({ album_id: albumId });
        await updateAlbumMutation.mutateAsync({ 
            photo_count: currentPhotos.length,
            cover_url: currentPhotos[0]?.thumbnail_url || currentPhotos[0]?.file_url
        });
        setShowUploader(false);
    };

    const handleEditPhoto = async (formData) => {
        await updatePhotoMutation.mutateAsync({ id: editingPhoto.id, data: formData });
        setEditingPhoto(null);
    };

    const handleDeletePhoto = async () => {
        setIsDeleting(true);
        await deletePhotoMutation.mutateAsync(deletePhoto.id);
        setDeletePhoto(null);
        setIsDeleting(false);
    };

    const handleAlbumSave = async (formData) => {
        await updateAlbumMutation.mutateAsync(formData);
        setEditAlbum(false);
    };

    // Filtrar e ordenar fotos
    const filteredPhotos = photos
        .filter(photo =>
            photo.title?.toLowerCase().includes(searchQuery.toLowerCase()) ||
            photo.description?.toLowerCase().includes(searchQuery.toLowerCase())
        )
        .sort((a, b) => {
            const dateA = new Date(a.acquisition_date || a.created_date);
            const dateB = new Date(b.acquisition_date || b.created_date);
            return sortOrder === 'desc' ? dateB - dateA : dateA - dateB;
        });

    if (!albumId) {
        return (
            <div className="min-h-screen flex items-center justify-center">
                <p className="text-slate-500">ID do álbum não encontrado</p>
            </div>
        );
    }

    return (
        <div className="min-h-screen bg-gradient-to-br from-slate-50 via-white to-violet-50">
            {/* Header */}
            <div className="bg-white/80 backdrop-blur-md border-b border-slate-100 sticky top-0 z-40">
                <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
                    <div className="flex flex-col gap-4">
                        {/* Top Row */}
                        <div className="flex items-center justify-between">
                            <div className="flex items-center gap-4">
                                <Link to={createPageUrl('Albums')}>
                                    <Button variant="ghost" size="icon" className="rounded-full">
                                        <ArrowLeft className="w-5 h-5" />
                                    </Button>
                                </Link>
                                
                                {albumLoading ? (
                                    <div className="space-y-2">
                                        <Skeleton className="h-7 w-48" />
                                        <Skeleton className="h-4 w-32" />
                                    </div>
                                ) : album && (
                                    <div>
                                        <div className="flex items-center gap-2">
                                            <h1 className="text-xl font-bold text-slate-800">{album.title}</h1>
                                            <Button 
                                                variant="ghost" 
                                                size="icon"
                                                className="h-7 w-7"
                                                onClick={() => setEditAlbum(true)}
                                            >
                                                <Edit className="w-4 h-4" />
                                            </Button>
                                        </div>
                                        {album.description && (
                                            <p className="text-sm text-slate-500">{album.description}</p>
                                        )}
                                    </div>
                                )}
                            </div>

                            <Button 
                                onClick={() => setShowUploader(true)}
                                className="bg-violet-600 hover:bg-violet-700"
                            >
                                <Upload className="w-4 h-4 mr-2" />
                                Enviar Fotos
                            </Button>
                        </div>

                        {/* Controls Row */}
                        <div className="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3">
                            <div className="flex items-center gap-3 w-full sm:w-auto">
                                <div className="relative flex-1 sm:w-64">
                                    <Search className="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-400" />
                                    <Input
                                        placeholder="Buscar fotos..."
                                        value={searchQuery}
                                        onChange={(e) => setSearchQuery(e.target.value)}
                                        className="pl-9 bg-white/80"
                                    />
                                </div>

                                <Select value={sortOrder} onValueChange={setSortOrder}>
                                    <SelectTrigger className="w-40">
                                        <SelectValue />
                                    </SelectTrigger>
                                    <SelectContent>
                                        <SelectItem value="desc">
                                            <span className="flex items-center gap-2">
                                                <SortDesc className="w-4 h-4" />
                                                Mais recentes
                                            </span>
                                        </SelectItem>
                                        <SelectItem value="asc">
                                            <span className="flex items-center gap-2">
                                                <SortAsc className="w-4 h-4" />
                                                Mais antigas
                                            </span>
                                        </SelectItem>
                                    </SelectContent>
                                </Select>
                            </div>

                            <div className="flex items-center gap-2">
                                <span className="text-sm text-slate-500">
                                    {filteredPhotos.length} foto(s)
                                </span>
                                <Tabs value={viewMode} onValueChange={setViewMode}>
                                    <TabsList className="bg-slate-100">
                                        <TabsTrigger value="grid" className="gap-1">
                                            <Grid3X3 className="w-4 h-4" />
                                        </TabsTrigger>
                                        <TabsTrigger value="table" className="gap-1">
                                            <List className="w-4 h-4" />
                                        </TabsTrigger>
                                    </TabsList>
                                </Tabs>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {/* Upload Panel */}
            <AnimatePresence>
                {showUploader && (
                    <motion.div
                        initial={{ opacity: 0, height: 0 }}
                        animate={{ opacity: 1, height: 'auto' }}
                        exit={{ opacity: 0, height: 0 }}
                        className="bg-white border-b border-slate-100"
                    >
                        <div className="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
                            <div className="flex items-center justify-between mb-4">
                                <h3 className="font-semibold text-slate-800">Enviar Fotos</h3>
                                <Button 
                                    variant="ghost" 
                                    size="icon"
                                    onClick={() => setShowUploader(false)}
                                >
                                    <X className="w-4 h-4" />
                                </Button>
                            </div>
                            <PhotoUploader 
                                albumId={albumId} 
                                onUploadComplete={handleUploadComplete}
                            />
                        </div>
                    </motion.div>
                )}
            </AnimatePresence>

            {/* Content */}
            <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
                {photosLoading ? (
                    viewMode === 'grid' ? (
                        <div className="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
                            {[...Array(10)].map((_, i) => (
                                <div key={i} className="space-y-2">
                                    <Skeleton className="aspect-square rounded-xl" />
                                    <Skeleton className="h-4 w-3/4" />
                                    <Skeleton className="h-3 w-1/2" />
                                </div>
                            ))}
                        </div>
                    ) : (
                        <Skeleton className="h-96 rounded-xl" />
                    )
                ) : filteredPhotos.length === 0 ? (
                    <motion.div
                        initial={{ opacity: 0, y: 20 }}
                        animate={{ opacity: 1, y: 0 }}
                        className="text-center py-20"
                    >
                        <div className="w-24 h-24 mx-auto mb-6 rounded-full bg-slate-100 flex items-center justify-center">
                            <ImageOff className="w-12 h-12 text-slate-300" />
                        </div>
                        <h2 className="text-xl font-semibold text-slate-700 mb-2">
                            {searchQuery ? 'Nenhuma foto encontrada' : 'Álbum vazio'}
                        </h2>
                        <p className="text-slate-500 mb-6">
                            {searchQuery 
                                ? 'Tente buscar com outros termos'
                                : 'Envie suas primeiras fotos para este álbum'
                            }
                        </p>
                        {!searchQuery && (
                            <Button 
                                onClick={() => setShowUploader(true)}
                                className="bg-violet-600 hover:bg-violet-700"
                            >
                                <Upload className="w-4 h-4 mr-2" />
                                Enviar Fotos
                            </Button>
                        )}
                    </motion.div>
                ) : viewMode === 'grid' ? (
                    <div className="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
                        <AnimatePresence>
                            {filteredPhotos.map((photo) => (
                                <PhotoCard
                                    key={photo.id}
                                    photo={photo}
                                    onView={(p) => setViewingPhoto(p)}
                                    onEdit={(p) => setEditingPhoto(p)}
                                    onDelete={(p) => setDeletePhoto(p)}
                                />
                            ))}
                        </AnimatePresence>
                    </div>
                ) : (
                    <PhotoTableView
                        photos={filteredPhotos}
                        onView={(p) => setViewingPhoto(p)}
                        onEdit={(p) => setEditingPhoto(p)}
                        onDelete={(p) => setDeletePhoto(p)}
                    />
                )}
            </div>

            {/* Modals */}
            <AlbumFormModal
                open={editAlbum}
                onOpenChange={setEditAlbum}
                album={album}
                onSave={handleAlbumSave}
            />

            <PhotoFormModal
                open={!!editingPhoto}
                onOpenChange={(open) => !open && setEditingPhoto(null)}
                photo={editingPhoto}
                onSave={handleEditPhoto}
            />

            <PhotoViewer
                open={!!viewingPhoto}
                onOpenChange={(open) => !open && setViewingPhoto(null)}
                photo={viewingPhoto}
                photos={filteredPhotos}
                onNavigate={(p) => setViewingPhoto(p)}
            />

            <AlertDialog open={!!deletePhoto} onOpenChange={(open) => !open && setDeletePhoto(null)}>
                <AlertDialogContent>
                    <AlertDialogHeader>
                        <AlertDialogTitle>Excluir Foto</AlertDialogTitle>
                        <AlertDialogDescription>
                            Tem certeza que deseja excluir a foto "{deletePhoto?.title || 'Sem título'}"? 
                            Esta ação não pode ser desfeita.
                        </AlertDialogDescription>
                    </AlertDialogHeader>
                    <AlertDialogFooter>
                        <AlertDialogCancel disabled={isDeleting}>Cancelar</AlertDialogCancel>
                        <AlertDialogAction 
                            onClick={handleDeletePhoto}
                            className="bg-red-600 hover:bg-red-700"
                            disabled={isDeleting}
                        >
                            {isDeleting ? (
                                <Loader2 className="w-4 h-4 mr-2 animate-spin" />
                            ) : null}
                            Excluir
                        </AlertDialogAction>
                    </AlertDialogFooter>
                </AlertDialogContent>
            </AlertDialog>
        </div>
    );
}