import React, { useState, useEffect } from 'react';
import { Dialog, DialogContent, DialogHeader, DialogTitle, DialogFooter } from "@/components/ui/dialog";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import { Label } from "@/components/ui/label";
import { Loader2, ImageIcon, Save, Calendar, Palette } from 'lucide-react';

export default function PhotoFormModal({ open, onOpenChange, photo, onSave }) {
    const [formData, setFormData] = useState({
        title: '',
        description: '',
        acquisition_date: '',
        dominant_color: ''
    });
    const [isLoading, setIsLoading] = useState(false);
    const [errors, setErrors] = useState({});

    useEffect(() => {
        if (photo) {
            setFormData({
                title: photo.title || '',
                description: photo.description || '',
                acquisition_date: photo.acquisition_date 
                    ? new Date(photo.acquisition_date).toISOString().slice(0, 16)
                    : '',
                dominant_color: photo.dominant_color || ''
            });
        } else {
            setFormData({ 
                title: '', 
                description: '', 
                acquisition_date: '',
                dominant_color: ''
            });
        }
        setErrors({});
    }, [photo, open]);

    const validate = () => {
        const newErrors = {};
        if (formData.title && formData.title.length > 100) {
            newErrors.title = 'O título deve ter no máximo 100 caracteres';
        }
        if (formData.description && formData.description.length > 500) {
            newErrors.description = 'A descrição deve ter no máximo 500 caracteres';
        }
        if (formData.dominant_color && !/^#[0-9A-Fa-f]{6}$/.test(formData.dominant_color)) {
            newErrors.dominant_color = 'Formato inválido. Use #RRGGBB';
        }
        setErrors(newErrors);
        return Object.keys(newErrors).length === 0;
    };

    const handleSubmit = async (e) => {
        e.preventDefault();
        if (!validate()) return;

        setIsLoading(true);
        await onSave({
            ...formData,
            acquisition_date: formData.acquisition_date 
                ? new Date(formData.acquisition_date).toISOString()
                : photo?.acquisition_date
        });
        setIsLoading(false);
        onOpenChange(false);
    };

    return (
        <Dialog open={open} onOpenChange={onOpenChange}>
            <DialogContent className="sm:max-w-lg">
                <DialogHeader>
                    <DialogTitle className="flex items-center gap-2">
                        <ImageIcon className="w-5 h-5 text-violet-600" />
                        Editar Foto
                    </DialogTitle>
                </DialogHeader>

                {photo && (
                    <div className="flex gap-4 mb-4">
                        <div className="w-24 h-24 rounded-lg overflow-hidden bg-slate-100 flex-shrink-0">
                            <img 
                                src={photo.thumbnail_url || photo.file_url}
                                alt={photo.title}
                                className="w-full h-full object-cover"
                            />
                        </div>
                        <div className="flex-1 text-sm text-slate-500">
                            <p><strong>Tamanho:</strong> {photo.file_size ? `${(photo.file_size / 1024 / 1024).toFixed(2)} MB` : '-'}</p>
                            <p><strong>Dimensões:</strong> {photo.width && photo.height ? `${photo.width}×${photo.height}` : '-'}</p>
                        </div>
                    </div>
                )}

                <form onSubmit={handleSubmit} className="space-y-4">
                    <div className="space-y-2">
                        <Label htmlFor="title">Título</Label>
                        <Input
                            id="title"
                            value={formData.title}
                            onChange={(e) => setFormData({ ...formData, title: e.target.value })}
                            placeholder="Nome da foto"
                            className={errors.title ? 'border-red-500' : ''}
                        />
                        {errors.title && (
                            <p className="text-sm text-red-500">{errors.title}</p>
                        )}
                    </div>

                    <div className="space-y-2">
                        <Label htmlFor="description">Descrição</Label>
                        <Textarea
                            id="description"
                            value={formData.description}
                            onChange={(e) => setFormData({ ...formData, description: e.target.value })}
                            placeholder="Descreva a foto..."
                            rows={3}
                            className={errors.description ? 'border-red-500' : ''}
                        />
                        {errors.description && (
                            <p className="text-sm text-red-500">{errors.description}</p>
                        )}
                    </div>

                    <div className="grid grid-cols-2 gap-4">
                        <div className="space-y-2">
                            <Label htmlFor="acquisition_date" className="flex items-center gap-1">
                                <Calendar className="w-3 h-3" />
                                Data de Aquisição
                            </Label>
                            <Input
                                id="acquisition_date"
                                type="datetime-local"
                                value={formData.acquisition_date}
                                onChange={(e) => setFormData({ ...formData, acquisition_date: e.target.value })}
                            />
                        </div>

                        <div className="space-y-2">
                            <Label htmlFor="dominant_color" className="flex items-center gap-1">
                                <Palette className="w-3 h-3" />
                                Cor Predominante
                            </Label>
                            <div className="flex gap-2">
                                <Input
                                    id="dominant_color"
                                    value={formData.dominant_color}
                                    onChange={(e) => setFormData({ ...formData, dominant_color: e.target.value })}
                                    placeholder="#RRGGBB"
                                    className={`flex-1 ${errors.dominant_color ? 'border-red-500' : ''}`}
                                />
                                <input
                                    type="color"
                                    value={formData.dominant_color || '#808080'}
                                    onChange={(e) => setFormData({ ...formData, dominant_color: e.target.value })}
                                    className="w-10 h-10 rounded cursor-pointer border border-slate-200"
                                />
                            </div>
                            {errors.dominant_color && (
                                <p className="text-sm text-red-500">{errors.dominant_color}</p>
                            )}
                        </div>
                    </div>

                    <DialogFooter>
                        <Button 
                            type="button" 
                            variant="outline" 
                            onClick={() => onOpenChange(false)}
                            disabled={isLoading}
                        >
                            Cancelar
                        </Button>
                        <Button 
                            type="submit" 
                            disabled={isLoading}
                            className="bg-violet-600 hover:bg-violet-700"
                        >
                            {isLoading ? (
                                <Loader2 className="w-4 h-4 mr-2 animate-spin" />
                            ) : (
                                <Save className="w-4 h-4 mr-2" />
                            )}
                            Salvar
                        </Button>
                    </DialogFooter>
                </form>
            </DialogContent>
        </Dialog>
    );
}